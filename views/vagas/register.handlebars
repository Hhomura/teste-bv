{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h2>Publicar Vaga</h2>

<div class="card">
    <div class="card-body">
        <form action="/vagas/register/{{empresas.id}}" method="post">
            <label for="nome">Titulo:</label>
            <input class="form-control" type="text" name="titulo" id="titulo">
            <label for="descricao">Descricao:</label>
            <input class="form-control" type="text" name="descricao" id="descricao">
            <button type="submit" class="btn btn-primary mt-4" >Publicar Vaga</button>
            <a href="/" style="width: 100px;"><button type="button" class="btn btn-secondary mt-4" >Cancelar</button></a>
        </form>
    </div>
</div>